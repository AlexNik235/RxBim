<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

    <PropertyGroup>
        <TargetFramework>net472</TargetFramework>
        <PlatformTarget>x64</PlatformTarget>
        <NoWarn>NU1701</NoWarn>
        <UseWPF>true</UseWPF>
        <AssemblyName>$(MSBuildProjectName).$(ApiVersion)</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Fonts\GraphikLCG-Medium.ttf" />
      <None Remove="Fonts\GraphikLCG-Regular.ttf" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="Fonts\GraphikLCG-Medium.ttf">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		<Pack>true</Pack>
		<PackageCopyToOutput>true</PackageCopyToOutput>
      </Content>
      <Content Include="Fonts\GraphikLCG-Regular.ttf">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		<Pack>true</Pack>
		<PackageCopyToOutput>true</PackageCopyToOutput>
      </Content>
    </ItemGroup>
	
  <ItemGroup>
    <PackageReference Include="CSharpFunctionalExtensions" Version="2.12.2" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.19" />
    <PackageReference Include="MvvmLight" Version="5.4.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PikTools.Di\PikTools.Di.csproj" />
  </ItemGroup>

  <PropertyGroup>
        <Version>$(ApiVersion)</Version>
        <Description>PikTools UI api Library</Description>
        <PackageId>BimLab.PikTools.Shared.Ui</PackageId>
    </PropertyGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Windows.Markup.XmlnsPrefix">
      <_Parameter1>https://bimteam.ru/piktools/xaml/controls</_Parameter1>
      <_Parameter2>btc</_Parameter2>
    </AssemblyAttribute>
    <AssemblyAttribute Include="System.Windows.Markup.XmlnsDefinition">
      <_Parameter1>https://bimteam.ru/piktools/xaml/controls</_Parameter1>
      <_Parameter2>PikTools.Shared.Ui.Controls</_Parameter2>
    </AssemblyAttribute>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

</Project>
