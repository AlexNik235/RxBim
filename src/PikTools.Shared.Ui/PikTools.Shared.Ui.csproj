<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

    <PropertyGroup>
        <TargetFramework>net471</TargetFramework>
        <PlatformTarget>x64</PlatformTarget>
        <NoWarn>NU1701</NoWarn>
        <UseWPF>true</UseWPF>
    </PropertyGroup>

    <PropertyGroup>
        <CodeAnalysisRuleSet>..\..\stylecop.ruleset</CodeAnalysisRuleSet>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.19"/>
        <PackageReference Include="MvvmLight" Version="5.4.1.1"/>
        <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Behaviors\"/>
        <Folder Include="Helpers\"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\PikTools.Di\PikTools.Di.csproj"/>
    </ItemGroup>

    <PropertyGroup>
        <PackageId>BimLab.PikTools.Shared.Ui</PackageId>
        <Version>2020.08.1-dev01</Version>
        <Authors>BimLab BimTeam</Authors>
        <Company>pik-group.com</Company>
        <Product>BimLab.PikTools</Product>
        <Description>PikTools UI api Library</Description>
        <Copyright>Copyright ©2020 PIK Group</Copyright>
        <PackageProjectUrl>https://gitlab.com/pik_tools/shared/piktools.apiframework</PackageProjectUrl>
        <RepositoryUrl>https://gitlab.com/pik_tools/shared/piktools.apiframework.git</RepositoryUrl>
        <PackageTags>BIM BimLab</PackageTags>
    </PropertyGroup>

</Project>
