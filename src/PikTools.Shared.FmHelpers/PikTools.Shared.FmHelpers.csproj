<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net47</TargetFramework>
	  <LangVersion>8</LangVersion>
        <PlatformTarget>x64</PlatformTarget>
        <NoWarn>NU1701</NoWarn>
      <AssemblyName>$(MSBuildProjectName).$(ApiVersion)</AssemblyName>
  </PropertyGroup>
	
	<PropertyGroup>
        <CodeAnalysisRuleSet>..\..\stylecop.ruleset</CodeAnalysisRuleSet>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>
	
	<ItemGroup>
    <PackageReference Include="BimLab.Revit.Api.2019" Version="1.0.1" />
	<PackageReference Include="BimLab.FamilyManager.Client.SDK.V2" Version="2020.11.0" />
	<PackageReference Include="Bimlab.Security.Client" Version="2020.7.2" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
	
	<ItemGroup>
    <ProjectReference Include="..\PikTools.Di\PikTools.Di.csproj" />
    <ProjectReference Include="..\PikTools.Shared\PikTools.Shared.csproj" />
  </ItemGroup>
	
	<PropertyGroup>
        <Version>$(ApiVersion)</Version>
        <Description>PikTools Family Manager helpers Library</Description>
        <PackageId>BimLab.PikTools.Shared.FmHepers</PackageId>
    </PropertyGroup>

</Project>
